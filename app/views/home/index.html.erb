<h1>Start your List!</h1>
<div ng-controller="NewListCtrl">
  <form ng-submit="claimName()">
    <input type="text" ng-model="listname" placeholder="List Name" />
    <input type="submit" value="Start Your List!" /><br>
  </form>
</div>

<h1>Sign Up!</h1>
<div ng-controller="SignupCtrl">
  <ul class="unstyled">
    <li ng-repeat="email in emails">
      <span>{{email}}</span>
    </li>
  </ul>
  <form ng-submit="addEmail()">
    <input type="email" ng-model="email" placeholder="Email" />
    <input type="submit" value="Add" /><br>
  </form>
</div>